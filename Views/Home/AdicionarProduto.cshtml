@using StoreEP.Models
@model Produto

<h3>Criar Produto</h3>

<div>
    <form class="col-sm-3" asp-action="AdicionarProduto" method="post">
        <div class="form-group">
            <label asp-for="CD_Produto">Código do produto</label>
            <input asp-for="CD_Produto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NM_Produto">Nome</label>
            <input asp-for="NM_Produto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Preco">Preço</label>
            <input asp-for="Preco" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NM_Categoria">Categoria</label>
            <input asp-for="NM_Categoria" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PD_Fabricante">Fabricante</label>
            <input asp-for="PD_Fabricante" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImagemProduto">Imagem</label>
            <input asp-for="ImagemProduto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PD_Descricao">Descrição</label>
            <textarea asp-for="PD_Descricao" class="form-control" ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
    </form>
</div>