@using Microsoft.AspNetCore.Identity
@using StoreEP.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model Order
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Checkout";
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Olá @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>


    <form asp-action="Checkout" method="post">
        <h3>Enviar para</h3>
        <div class="form-group">
            <input asp-for="UserID" type="hidden" value="@UserManager.GetUserId(User)" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" />
            <div><span asp-validation-for="Nome" class="text-danger"></span></div>
        </div>
        <h3>Endereço</h3>
        <div class="form-group">
            <label>Rua</label>
            <input asp-for="Line1" class="form-control" />
            <div><span asp-validation-for="Line1" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Bairro</label>
            <input asp-for="Line2" class="form-control" />
            <div><span asp-validation-for="Line2" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Número</label>
            <input asp-for="Line3" class="form-control" />
            <div><span asp-validation-for="Line3" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Cidade</label>
            <input asp-for="City" class="form-control" />
            <div><span asp-validation-for="City" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Estado</label>
            <input asp-for="State" class="form-control" />
            <div><span asp-validation-for="State" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Cep</label>
            <input asp-for="Zip" class="form-control" />
            <div><span asp-validation-for="Zip" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Pais</label>
            <input asp-for="Country" class="form-control" />
            <div><span asp-validation-for="Country" class="text-danger"></span></div>
        </div>
        <h3>Opções</h3>
        <div class="checkbox">
            <label>
                <input asp-for="GifWrap" />Gift wrap these items
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Complete Order" />
        </div>
    </form>
}
else
{
   
}