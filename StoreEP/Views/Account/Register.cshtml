@model RegisterViewModel
@{
    ViewData["Title"] = "Nova Conta";
}

<h2>@ViewData["Title"]</h2>

<div class="form-row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="Apelido" class="col-form-label"></label>
                <input asp-for="Apelido" type="text" class="form-control" placeholder="Apelido">
                <div><span asp-validation-for="Apelido" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="NomeUsuario" class="col-form-label"></label>
                <input asp-for="NomeUsuario" type="text" class="form-control" placeholder="Nome de usuÃ¡rio">
                <div><span asp-validation-for="NomeUsuario" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="Nome" class="col-form-label"></label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Nome">
                <div><span asp-validation-for="Nome" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-form-label"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefone">
                <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" type="text" class="form-control" placeholder="Senha">
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Repetir senha">
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-default">Registrar</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
