@model IEnumerable<IdentityRole>
@{
    Layout = "_GerenciamentoLayout";
}
<div class="bg-primary panel-body">
    <h4>Roles</h4>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Name</th><th>User</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">Sem Identidades</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Apagar" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Apagar</button>
                    </form>
                </td>
            </tr>
        }
    }
</table> 
<a class="btn btn-primary" asp-action="Criar">Create</a>