@model IEnumerable<StoreEP.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomePD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaPD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecoPD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DescricaoPD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LinkImagemPD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fabricante)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaPD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoPD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoPD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkImagemPD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdutoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
