@using StoreEP.Models
@model Produto

<h3>Criar Produto</h3>

<div class="row">
    <form asp-action="AdicionarProduto" method="post">
        <div class="form-group col-sm-4">
            <label asp-for="CD_Produto">Código do produto</label>
            <input asp-for="CD_Produto" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="NM_Produto">Nome</label>
            <input asp-for="NM_Produto" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Preco">Preço</label>
            <input asp-for="Preco" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="NM_Categoria">Categoria</label>
            <input asp-for="NM_Categoria" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="PD_Fabricante">Fabricante</label>
            <input asp-for="PD_Fabricante" class="form-control" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="ImagemProduto">Imagem</label>
            <input id="url_image_produto" asp-for="ImagemProduto" class="form-control" />   
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="PD_Descricao">Descrição</label>
            <textarea asp-for="PD_Descricao" class="form-control" style="margin: 0 0 10px 0; resize: none;"></textarea>
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a asp-action="Index" class="btn btn-default">Cancelar</a>
        </div>
        
    </form>
    <div class="form-group col-sm-4">
        <img id="img_visualizar" src="http://www.fuxicodemulher.com.br/wp-content/uploads/2016/02/sem-foto_800.jpg" />
        <button id="btn_visualizar" class="btn btn-primary" style="margin: 10px 0 0 0 10px">Pré Visualizar</button>
    </div>
    
</div>