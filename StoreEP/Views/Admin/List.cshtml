@model IEnumerable<Produto>
@{
    ViewBag.Title = "Todos os produtos";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">ID</th>
        <th>Nome</th>
        <th class="text-right">Preço</th>
        <th class="text-right">Categoria</th>
        <th class="text-right">Descrição</th>
        <th class="text-center">Ações</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item?.ID</td>
            <td>@item?.Nome</td>
            <td class="text-right">@item?.Preco.ToString("c")</td>
            <td class="text-right">@item?.Categoria</td>
            <td class="text-right">@item?.Descricao</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn btn-warning" asp-route-batata="@item.ID">Edit</a>
                    <input type="hidden" name="ID" value="@item.ID" />
                    <button type="submit" class="btn btn-danger btn-sm" >Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Adicionar produto</a>
</div>