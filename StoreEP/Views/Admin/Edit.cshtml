@model Produto
@{ 
    ViewBag.Title = "Editar Produto";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProdutoID"/>
    <div class="form-group">
        <label>Nome</label>
        <div><span asp-validation-for="NomePD" class="text-danger"></span></div>
        <input asp-for="NomePD" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <div><span asp-validation-for="DescricaoPD" class="text-danger"></span></div>
        <textarea asp-for="DescricaoPD" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPD">Categoria</label>
        <div><span asp-validation-for="CategoriaPD" class="text-danger"></span></div>
        <div >
            <select asp-for="CategoriaPD" class="combobox input-large form-control">
                <option></option>
                <option value="Chess">Chess</option>
                <option value="Soccer">Soccer</option>
                <option value="Watersport">Watersport</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>Preço</label>
        <div><span asp-validation-for="PrecoPD" class="text-danger"></span></div>
        <input asp-for="PrecoPD" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a asp-action="List" class="btn btn-default">Cancelar</a>
    </div>
</form>