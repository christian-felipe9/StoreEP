@model Address
@{ 
    ViewBag.Title = "Criar novo endereço";
    Layout = "_AdminLayout";
}
<form asp-action="Create" method="post">

    <div class="form-group">
        <label>Rua</label>
        <input asp-for="Line1" class="form-control" />
        <div><span asp-validation-for="Line1" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>Bairro</label>
        <input asp-for="Line2" class="form-control" />
        <div><span asp-validation-for="Line2" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>Número</label>
        <input asp-for="Line3" class="form-control" />
        <div><span asp-validation-for="Line3" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>Cidade</label>
        <input asp-for="City" class="form-control" />
        <div><span asp-validation-for="City" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>Estado</label>
        <input asp-for="State" class="form-control" />
        <div><span asp-validation-for="State" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>Cep</label>
        <input asp-for="Zip" class="form-control" />
        <div><span asp-validation-for="Zip" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label>País</label>
        <input asp-for="Country" class="form-control" />
        <div><span asp-validation-for="Country" class="text-danger"></span></div>
    </div>
    <h3>Opções</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GifWrap" />Gift wrap these items
        </label>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit" >Criar</button>
    </div>
</form>