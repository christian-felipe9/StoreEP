@model PedidoListaViewModel
@{
    ViewBag.Title = "Pedidos";
    Layout = "_AdminLayout";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Pedido</th>
        <th>Rua</th>
        <th>CEP</th>
        <th>Status</th>
        <th>Data da compra</th>
        <th colspan="4">Detalhes</th>
    </tr>
    @foreach (Pedido pedido in Model.Pedidos)
    {
        <tr>
            <td>@pedido.ID</td>
            <td>@pedido?.Address?.Rua</td>
            <td>@pedido?.Address?.CEP</td>
            @if (pedido.Shipped)
                {
                <td>Enviado</td>
            }
            else
            {
                <td>Não Enviado</td>
            }
            <td>@pedido.DataCompra</td>
        </tr>
        @foreach (var produto in pedido.Lines)
                {
            <tr>
                <td>@produto?.Produto?.Nome</td>
                <td>@produto?.Produto?.Preco.ToString("c")</td>
                <td>@produto?.Produto?.Categoria</td>
            </tr>
        }
    }
</table>
