@using StoreEP.Models;
@model Produto

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <h4 class="text-center"><span class="label label-info">Samsung</span></h4>
        <img src="@Model?.LinkImagemPD" class="img-responsive">
        <div class="caption">
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <h3>@Model?.NomePD</h3>
                </div>
                <div class="col-md-6 col-xs-6 price">
                    <h3>
                        <label>@Model?.PrecoPD</label>
                    </h3>
                </div>
            </div>
            <p>@Model?.DescricaoPD</p>
            <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> Like</a>
                </div>
                <div class="col-md-6">
                    <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a>
                </div>
            </div>
            <p>
                
            </p>
        </div>
    </div>
</div>