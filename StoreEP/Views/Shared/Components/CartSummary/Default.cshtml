@using StoreEP.Models
@model Carrinho
<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Seu carrinho:</b>
            @Model.ValorTotal().ToString("c")
        </small>
    }
    <a style="top: 14px; position: relative;" asp-controller="Carrinho" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <div class="material-icons mdl-badge mdl-badge--overlap" data-badge="@(Model.Lines.Sum(x => x.Quantidade) > 99 ?  99 : Model.Lines.Sum(x => x.Quantidade))">shopping_cart</div>
    </a>
</div>
