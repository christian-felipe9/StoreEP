@using StoreEP.Models.ViewModels
@using StoreEP.Models
@model ProductsListViewModel
@{
    ViewData["Title"] = "Index";
}
<style>
    img {
        width: 100%;
        height: 100%;
        padding: 10px;
    }

    a {
        text-decoration: none;
    }

    .mdl-cell {
        background-color: #1a1a1a;
    }

    .mdl-card__supporting-text :hover {
        border: 1px solid yellow;
    }

    .mdl-card__supporting-text {
        color: white;
    }

    .material-icons, .mdl-card__title-text {
        color: #fbb813;
    }
</style>
@if (ViewData["filtro.Nome"] != null)
{
    @if (Model.Produtos.Count() < 1)
    {
        <div class="alert alert-danger">
            <strong>Nenhum resuldo encontrado.</strong>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>@ViewData["filtro.Nome"]</strong>
        </div>
    }
}
<div class="mdl-grid">
    @foreach (var p in Model.Produtos)
    {
        <div id="@p.ProdutoId" class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--4dp">
            <div class="text-center">
                <img src="@p.Imagens.Select(i => i.Link).FirstOrDefault()" alt="@p.Imagens.Select(i => i.Nome).FirstOrDefault()" />
            </div>
            <a asp-action="Detalhes" asp-controller="Produtos" asp-route-ID="@p.ProdutoId">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">@p.Nome</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    @p.Descricao
                    <br />
                </div>
            </a>
            <div class="mdl-layout-spacer"></div>
            <div class="mdl-card__actions mdl-card--border" id="@p.ProdutoId-bottom-card">
                <input type="hidden" asp-for="@p.ProdutoId" />
                <span class="lead">
                    <a class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored" asp-action="AdicionarCarrinho" asp-controller="Carrinho" asp-route-produtoid="@p.ProdutoId">
                        <i class="material-icons">add_shopping_cart</i>
                    </a>
                    <span id="@p.ProdutoId-preco" style="float:right; color:white;">
                        @p.Preco.ToString("c")
                    </span>
                </span>
            </div>
        </div>
    }
</div>
<div class="row text-center">
    <div page-model="@Model.PagingInfo" page-action="Listar" page-classes-enabled="true" page-class="btn" page-class-normal="btn-default" page-class-selected="btn-primary" page-url-cartegory="@Model.CurrentCategory" class="btn-group pull-right"></div>
</div>