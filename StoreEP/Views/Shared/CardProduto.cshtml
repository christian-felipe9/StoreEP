@model StoreEP.Models.Produto
<div class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">@Model.NomePD</h2>
    </div>
    <div class="mdl-card__supporting-text">
        @Model.DescricaoPD
        <br>
        @Model.PrecoPD.ToString("c")
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Comprar
        </a>
    </div>
</div>



