@model Produto

<div id="@Model.ProdutoId" class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--4dp">
    <a asp-action="Detalhes" asp-controller="Produtos" asp-route-ID="@Model.ProdutoId">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">@Model.Nome</h2>
        </div>
        <div class="mdl-card__supporting-text">
            @Model.Descricao
            <br />
        </div>
    </a>
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-card__actions mdl-card--border" id="@Model.ProdutoId-bottom-card">
        <form id="@Model.ProdutoId" asp-action="AdicionarCarrinho" asp-controller="Carrinho" method="post">
            <input type="hidden" asp-for="ProdutoId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="lead">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored">
                    <i class="material-icons">add_shopping_cart</i>
                </button>
                <span id="@Model.ProdutoId-preco" style="float:right;">
                    @Model.Preco.ToString("c")
                </span>
            </span>
        </form>
    </div>
</div>




