@model StoreEP.Models.Produto
<div class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">@Model.NomePD</h2>
    </div>
    <div class="mdl-card__supporting-text">
        @Model?.DescricaoPD
        <br />
    </div>
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-card__actions mdl-card--border">
        <form id="@Model?.ProdutoID" asp-action="AddToCart" asp-controller="Carrinho" method="post">
            <input type="hidden" asp-for="ProdutoID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="lead">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored">
                    <i class="material-icons">add_shopping_cart</i>
                </button>
                <span style="float:right;">
                    @Model.PrecoPD.ToString("c")
                </span>
            </span>
        </form>
    </div>
</div>




