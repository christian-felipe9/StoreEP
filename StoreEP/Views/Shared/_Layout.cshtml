<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreEP</title>
    <base href="~/" />
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/chartist.js/latest/chartist.min.css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" asp-href-include="/lib/material-design-lite/material.css" />
    <link rel="stylesheet" asp-href-include="/css/index.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/material-design-lite/material.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-combobox/js/bootstrap-combobox.js"></script>
    <script type="text/javascript" src="~/lib/jquery.maskedinput/dist/jquery.maskedinput.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/jquery.gsap.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/TimelineMax.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/TweenMax.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/produto/listar.js"></script>
    <script type="text/javascript" src="~/js/admin/editar.js"></script>
    <style>
        .mdl-badge.mdl-badge--overlap::after {
            right: -7px;
            width: 15px;
            height: 15px;
            font-size: 10px;
            top: -10px;
            background: black;
        }
        body {
            background-color: #e8e8e8;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Produtos" asp-action="Listar" asp-route-category="" class="navbar-brand">Loja</a>
                @await Component.InvokeAsync("CartSummary")
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Admin" asp-action="Index" class="navbar-brand">Gerenciar</a></li>
                    <li class="active">@await Html.PartialAsync("_LoginPartial")</li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Buscar">
                    </div>
                    <button type="submit" class="btn btn-default">Buscar</button>
                </form>             
            </div>
        </div>
    </nav>
    <div class="panel">
        <div id="categories" class="d-inline">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-xs-9">
            @RenderBody()
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>
