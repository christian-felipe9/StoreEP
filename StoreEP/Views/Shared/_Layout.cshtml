<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreEP</title>
    <base href="~/" />
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/chartist.js/latest/chartist.min.css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">  
    <link rel="stylesheet" asp-href-include="/lib/material-design-lite/material.css" />
    <link rel="stylesheet" asp-href-include="/css/index.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/material-design-lite/material.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-combobox/js/bootstrap-combobox.js"></script>
    <script type="text/javascript" src="~/lib/jquery.maskedinput/dist/jquery.maskedinput.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/jquery.gsap.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/TimelineMax.min.js"></script>
    <script type="text/javascript" src="~/lib/greensock/src/minified/TweenMax.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/produto/listar.js"></script>
    <style>
        body {
            background-color: #221d1e;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default" role="navigation">
        <a asp-controller="Produtos" asp-action="List" asp-route-category="" class="navbar-brand">Loja</a>
        @await Html.PartialAsync("_LoginPartial")
        <div class="pull-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
        <a asp-controller="Admin" asp-action="Index" class="navbar-brand">Gerenciar</a>
    </div>
    <div class="panel">
        <div id="categories" class="col-xs-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-xs-9">
            @RenderBody()
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>
